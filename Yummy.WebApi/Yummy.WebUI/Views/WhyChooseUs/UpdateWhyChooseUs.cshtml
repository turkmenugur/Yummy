@model GetWhyChooseUsByIdDto

@{
    ViewData["Title"] = "UpdateWhyChooseUs";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Neden Bizi Seçmelisiniz Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ServiceId"/>
                            <label> Başlık</label>
                            <input type="text" asp-for="Title" class="form-control"/>
                            <br/>
                            <label> Açıklama</label>
                            <input type="text" asp-for="Description" class="form-control"/>
                            <br/>
                            <label> İkon Url</label>
                            <input type="text" asp-for="IconUrl" class="form-control"/>
                            <br/>
                            <button class="btn btn-success">Alanı Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





